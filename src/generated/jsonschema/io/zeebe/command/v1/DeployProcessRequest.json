{
  "type": "object",
  "properties": {
    "processes": {
      "description": "List of process resources to deploy",
      "type": "array",
      "items": {
        "$ref": "#/definitions/ProcessRequestObject"
      }
    }
  },
  "definitions": {
    "ProcessRequestObject": {
      "type": "object",
      "properties": {
        "name": {
          "description": "the resource basename, e.g. myProcess.bpmn",
          "type": "string"
        },
        "definition": {
          "description": "the process definition as a UTF8-encoded string",
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^[0-9]+$": {
              "type": "number"
            }
          }
        }
      }
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}