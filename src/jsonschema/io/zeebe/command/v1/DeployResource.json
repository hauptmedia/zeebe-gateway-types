{
    "$id": "https://hauptmedia.github.io/zeebe-gateway-types/jsonschema/io/zeebe/command/v1/DeployResource.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Resource": {
            "properties": {
                "content": {
                    "description": "the file content as a UTF8-encoded string",
                    "type": "string"
                },
                "name": {
                    "description": "the resource name, e.g. myProcess.bpmn or myDecision.dmn",
                    "type": "string"
                }
            },
            "required": [ "name", "content" ],
            "type": "object"
        }
    },
    "properties": {
        "resources": {
            "description": "list of resources to deploy",
            "items": {
                "$ref": "#/definitions/Resource"
            },
            "type": "array"
        }
    },
    "required": [ "resources" ],
    "type": "object"
}

