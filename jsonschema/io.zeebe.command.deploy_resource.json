{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Resource": {
            "properties": {
                "content": {
                    "additionalProperties": false,
                    "description": "the file content as a UTF8-encoded string",
                    "patternProperties": {
                        "^[0-9]+$": {
                            "type": "number"
                        }
                    },
                    "type": "object"
                },
                "name": {
                    "description": "the resource name, e.g. myProcess.bpmn or myDecision.dmn",
                    "type": "string"
                }
            },
            "type": "object"
        }
    },
    "properties": {
        "resources": {
            "description": "list of resources to deploy",
            "items": {
                "$ref": "#/definitions/Resource"
            },
            "type": "array"
        }
    },
    "type": "object"
}

